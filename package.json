{
  "name": "pbc",
  "repository": "hjdarnel/pbc",
  "license": "MIT",
  "scripts": {
    "start:dev": "npm install && nodemon -x 'npm run build && npm start | bunyan -o short -l debug' --watch src/ -L -e ts",
    "start": "micro -l tcp://0.0.0.0:3001 bin/index.js",
    "cleanbin": "rm -rf bin/",
    "build": "npm-run-all build:*",
    "build:clean": "npm run cleanbin",
    "build:ts": "tsc",
    "lint": "tslint --format verbose src/**/*.ts"
  },
  "dependencies": {
    "bunyan": "1.8.12",
    "micro": "9.3.3",
    "query-string": "6.1.0",
    "request": "2.88.0",
    "request-promise-native": "1.0.7"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.4",
    "@types/micro": "7.3.1",
    "@types/query-string": "6.1.0",
    "@types/request-promise-native": "1.0.15",
    "npm-run-all": "4.1.3",
    "prettier": "1.14.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.9.2"
  }
}
